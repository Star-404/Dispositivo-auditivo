programa
{
	funcao inicio() 
	{

	real a

	escreva ("insira o seu numero: ")
	leia (a)

	se( a > 0 )

     escreva ("seu numero é positivo")

	senao se( a < 0)

	escreva("seu numero é negativo")

	senao

	escreva ("seu numero é igual a zero")
 
	}

}
